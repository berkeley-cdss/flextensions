<%
  course_settings = course.course_settings
  extensions_enabled = course_settings.nil? || course_settings.enable_extensions
%>

<% unless extensions_enabled %>
<div class="alert alert-warning">
  <strong>Extensions are disabled for this course.</strong> To enable individual assignment extensions, please enable extensions in <a href="<%= course_settings_path(course, tab: 'general') %>">Course Settings</a>.
</div>
<% end %> 